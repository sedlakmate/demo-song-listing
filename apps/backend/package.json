{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "cp src/api-routes/openapi.yaml dist/api-routes/.",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "type-check": "yarn tsc --noEmit",
    "start": "ts-node ./src/index.ts",
    "test": "jest --detectOpenHandles"
  },
  "jest": {
    "preset": "@repo/jest-presets/dist"
  },
  "dependencies": {
    "@repo/logger": "*",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-openapi": "^12.1.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.17",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "esbuild": "^0.25.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3"
  }
}
